{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES5", "ScriptHost", "ES2015.Promise"],
    "declaration": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "coverage",
    "lib",
    "node_modules"
  ]
}
